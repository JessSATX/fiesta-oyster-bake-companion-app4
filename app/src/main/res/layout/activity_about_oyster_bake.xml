<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".AboutOysterBake">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fob_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="For a third of San Antonio’s history, the Oyster Bake has been part of the fabric of the community. What started as a St. Mary’s University alumni gathering with a handful of people in 1916 on the banks of the San Antonio River downtown has grown to a premier Fiesta San Antonio event with over 70,000 patrons and more than 7,000 volunteers."
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="The Oyster Bake truly is a party with a purpose. 100% of the proceeds raised during the Oyster Bake go directly back to the students of St. Mary’s University. By attending the Oyster Bake, you are helping to further the education of students and their growth as future community leaders. Over the years, your patronage has directly contributed millions of dollars in student scholarships and university programs, and for this we can simply say: thank you."
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/onstage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="350dp"
                android:scaleType="fitXY"
                android:src="@drawable/onstage_small" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="And in case you were wondering, over the two days of Oyster Bake, we go through 100,000 oysters and 32,000 chickens on sticks with jalapeños!"
            android:textSize="18sp" />

        <View
            android:id="@+id/fob_text_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Mission"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="To produce a quality, volunteer-driven, Fiesta San Antonio-approved music festival to raise funds for student scholarships to St. Mary’s University, and to support the University and the Alumni Association."
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Thank you for supporting student scholarships and university programs, and viva Oyster Bake!"
            android:textSize="18sp" />

        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>
</ScrollView>